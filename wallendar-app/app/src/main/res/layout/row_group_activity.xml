<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/group_activity_date_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Jun"
        android:textColor="@color/dark_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_activity_date_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="05"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_activity_date_month" />

    <ImageView
        android:id="@+id/group_activity_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_group_activity"
        app:layout_constraintEnd_toStartOf="@id/group_activity_title"
        app:layout_constraintStart_toEndOf="@id/group_activity_date_month"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_activity_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Compras de super"
        android:textColor="@color/dark_grey"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/group_activity_amount"
        app:layout_constraintStart_toEndOf="@id/group_activity_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_activity_amount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Tomas D. pago $1324"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_activity_icon"
        app:layout_constraintTop_toBottomOf="@id/group_activity_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>