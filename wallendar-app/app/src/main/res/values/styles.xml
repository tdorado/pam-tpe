<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="group_button_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="payable_button_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_teal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button1_bg</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_with_img" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/ic_check_black</item>
        <item name="android:backgroundTint">#9E8A9F</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>